{
  "name": "@passplum/web",
  "version": "2.0.0",
  "description": "web site",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "dist": "npm run clean && npm run build && npm run dependencies && npm run compress",
    "clean": "rm -r dist && rm dist.zip",
    "build": "babel src --out-dir dist --ignore \"src/**/*.test.js\"",
    "dependencies": "cp src/seed-data.json package.json package-lock.json dist/ && npm --only=production --prefix ./dist install ./dist",
    "compress": "pushd dist && zip -r ../dist.zip * && popd",
    "flow": "flow",
    "lint": "xo",
    "pretest": "npm run flow && npm run lint",
    "test": "NODE_ENV=test nyc ava"
  },
  "repository": {
    "type": "git",
    "url": "github.com/maxbeatty/passplum"
  },
  "author": "Max Beatty",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "ava": "^1.2.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "flow-bin": "^0.92.1",
    "nyc": "^13.2.0",
    "prettier": "^1.16.4",
    "xo": "^0.24.0"
  },
  "dependencies": {
    "aws-sdk": "^2.400.0",
    "keen-tracking": "^1.4.1",
    "rollbar": "^2.5.2",
    "zxcvbn": "^4.4.2"
  },
  "xo": {
    "extends": [
      "plugin:flowtype/recommended",
      "prettier",
      "prettier/flowtype"
    ],
    "plugins": [
      "flowtype",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "ignores": [
      "flow-typed/**/*",
      "dist/"
    ],
    "rules": {
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            ":",
            "::"
          ]
        }
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ]
  },
  "engines": {
    "node": ">=8"
  }
}
